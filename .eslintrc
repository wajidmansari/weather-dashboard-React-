{
  "extends": [
    "react-app",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "jsx-a11y",
    "prettier",
    "react-hooks"
  ],
  "rules": {
    "semi": 0,
    "no-undef": "off",
    "no-unused-vars": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {"devDependencies": true}
    ],
    "quotes": ["error", "single"],
    "react-hooks/rules-of-hooks": "error",
    "no-console": "warn",
    "react/jsx-filename-extension": [
      1,
      { "extensions": [".js", ".jsx"] }
    ],
    "prettier/prettier": [
      "error", {
        "semi": false
      }
    ]
  }
}
